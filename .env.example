# OpenAI API Key for embeddings and chat completion
OPENAI_API_KEY=your-openai-api-key

# PostgreSQL connection string with pgvector extension
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/docsgpt

# Optional: Number of seconds before timing out API calls (default: 30)
# API_TIMEOUT=30

# Optional: Maximum number of chunks to retrieve per query (default: 4)
# MAX_CHUNKS=4

# Optional: Minimum similarity threshold for chunk retrieval (default: 0.7)
# SIMILARITY_THRESHOLD=0.7

# Turnstile (Vercel CAPTCHA) Configuration
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_site_key_here
TURNSTILE_SECRET_KEY=your_secret_key_here 